<h6>Home</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
 <table class="striped">
     <thead>
         <tr>
           <th> Title </th>
           <th> Date </th>
           <th> status</th>
           <th></th>  
         </tr>
     </thead>
     <tbody>
         {{#each stories}}
           <tr>
             <td><a href="/stories/{{_id}}"></a>{{title}}</td> 
             <td>{{formatDate createdAt 'MMMM Do YYYY,h:mm:ss a'}}</td> 
             <td><span class="dash-status">{{status}}</span></td>
             <td>
               <a href="/stories/edit/{{_id}}" class="btn " style="float: left; margin-right:10px;"><i class="fas fa-edit"></i></a>
               <form action="/stories/{{_id}}" method="POST" id="delet-form">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn red" type="submit"><i class="fas fa-trash"></i></button>
               </form>
             </td>
           </tr>
         {{/each}}
     </tbody>
 </table>
{{else}}
<p>You have not created stories yet,please create <a href='/stories/add'>one!</a> </p>
{{/if}}